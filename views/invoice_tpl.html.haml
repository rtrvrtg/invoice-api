!!! 5
%html
  %head
    %title= "Invoice"
    %link{ :rel => "stylesheet", :type => "text/css", :href => "/styles" }
    %link{ :rel => "stylesheet", :href => "http://code.jquery.com/ui/1.10.0/themes/base/jquery-ui.css" }
    %script{ :src => "http://code.jquery.com/jquery-1.9.1.min.js" }
    %script{ :src => "http://code.jquery.com/ui/1.10.0/jquery-ui.js" }
    %script{ :src => "/invoice.js" }
  %body{ :id => "hisaishi-admin--lyrics"}
    %header
      %hgroup{ :class => "header-left" }
        %img{ :src => "/smash-logo.png", :class => "logo" }
        %table{ :class => "header-left-details" }
          %tbody
            %tr
              %th= "Date: "
              %td
                %span{ :contenteditable => "false" }= ""
                %input{ :type => "hidden", :class => "datepicker", :id => "issue-date", 'data-chain' => "payment-due,28" }
            %tr
              %th= "To: "
              %td
                %strong
                  %span{ :contenteditable => "true" }= "Sponsor Name"
                %br
                %span{ :contenteditable => "true" }= "Sponsor Address"
      %hgroup{ :class => "header-right" }
        %h2= "Tax Invoice"
        %p
          %strong= "Invoice No: #{inv.number}"
        %p= "ABN: 46 310 471 217"
        %p
          = "Suite 808"
          %br
          = "187 Liverpool St."
          %br
          = "Sydney NSW 2000"
    %section{:id => "content" }
      %p= "All items are GST inclusive unless marked with 'ex GST'."
      %table{ :id => "invoice-table" }
        %thead
          %tr
            %th= "Description"
            %th{ :class => "price-col" }= "Amount"
        %tbody
          %tr
            %td
              %span{ :class => "name", :contenteditable => "true" }= "item"
            %td{ :class => "price-col" }
              %span{ :class => "price", :contenteditable => "true" }= "0.00"
              %a{ :class => 'row-button remove', :href => '#', :title => "Remove row" }= "-"
        %tfoot
          %tr
            %th
              %a{ :class => 'row-button add', :href => '#', :title => "Add row" }= "+"
            %th{ :class => "price-col" }
              %p
                = "(Without GST) Total: "
                %span{ :class => "subtotal price" }= "0.00"
              %p
                = "GST: "
                %span{ :class => "gst price", :contenteditable => "true" }= "0.00"
              %p
                = "(Incl. GST) Total: "
                %span{ :class => "total price" }= "0.00"
      %h2= "Payment Methods:"
      %ul
        %li
          %em= "By cheque – "
          = "Please make cheque payable to SMASH and mail it to our treasury department along with copy of your invoice or invoice number (see mailing address above)"
        %li
          %em= "By EFT transfer or Bank deposit – "
          = "Please transfer funds directly to our Commonwealth Bank account listed below. Please include the invoice number in the transaction description."
          %br
          %strong
            = "Account name: SMASH "
            = "BSB: 062303 "
            = "Account number: 10506449 "
      %p
        %strong
          = "Payment is due by: "
          %span{ :contenteditable => "false" }= ""
          %input{ :type => "hidden", :class => "datepicker", :id => "payment-due" }
      %p{:class => "legalese"}
        %strong
          = "This document forms part of the contract between SMASH Inc (the ‘Organiser’, ‘We’ or ‘Us’) and the signatory (the ‘Exhibitor’ or ‘You’). It is a condition of Your attendance at the 2014 SMASH! Sydney Manga and Anime Show (the ‘Convention’) that you agree to, and abide by, the following."
          %br
          = "ANY BREACH OF THESE TERMS MAY RESULT IN REMOVAL FROM THE CONVENTION."
    %section{ :id => "terms" }
      %img{ :src => "/smash-logo.png", :class => "logo" }
      %h2= "SMASH! 2014 #{inv.app.name} Terms and Conditions"
      %div{ :class => "terms-content" }
        != haml :"_#{inv.app.stub}"
